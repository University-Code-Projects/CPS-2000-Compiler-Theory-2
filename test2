

var b : int = 5; //declare y and set it to 1.0

var y : real = 1.0; //declare y and set it to 1.0

set y = 2.2;

var x : real = 1.0; //declare y and set it to 1.0

set y = y * x; //declare y and set it to 1.0


def funcPow(x : real, n : int, y: real) :real
{
    if( n>=0 )
    {
        write "if is true";
        while(n>0)
        {
            set y = y * x;  //Assignment y = y *x;
            set n = n -1;   //Assignment n = n-1;
        }
    }
    else
    {
        write "if is false";
        while(n<0)
        {
            set y = y / x;    //Assignment y = y / x;
            set n = n + 1;    //Assignment n = n + 1;
        }
    }
    return y;               //return y as the result
}

write "Function Call";

write funcPow(2.0, 3, 2.0);





